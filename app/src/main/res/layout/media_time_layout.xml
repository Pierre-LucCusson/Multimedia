<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/buttonLayout"
    android:orientation="horizontal"
    tools:showIn="@layout/content_main">

    <TextView
        android:id="@+id/progressionTimeText"
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:inputType="time"/>

    <SeekBar
        android:id="@+id/timeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/progressionTimeText"
        android:layout_toRightOf="@+id/progressionTimeText"
        android:layout_toStartOf="@+id/totalTimeText"
        android:layout_toLeftOf="@+id/totalTimeText" />

    <TextView
        android:id="@+id/totalTimeText"
        android:text="99:99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:inputType="time" />

</RelativeLayout>